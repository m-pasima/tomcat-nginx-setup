# /etc/nginx/conf.d/load-balancer.conf
#
# Nginx Load Balancer for Multiple Tomcat Backends
# Includes: Weighted load balancing, health checks, performance tuning, security headers

upstream tomcat_pool {
    # Weighted round-robin: 70% traffic to Tomcat A, 30% to Tomcat B
    server 172.31.27.222:8080 weight=7 max_fails=3 fail_timeout=30s;   # Tomcat A
    server 172.31.30.134:8080 weight=3 max_fails=3 fail_timeout=30s;   # Tomcat B
}

server {
    listen 80 default_server;
    server_name devops.academy.test;

    # -- Security Headers --
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";
    add_header X-XSS-Protection "1; mode=block";
    add_header Referrer-Policy "strict-origin-when-cross-origin";

    # -- Performance Tuning --
    client_max_body_size        10m;
    client_body_buffer_size     128k;
    client_header_buffer_size   1k;
    large_client_header_buffers 4 4k;
    keepalive_timeout           75s;
    keepalive_requests          100;
    sendfile                    on;
    tcp_nopush                  on;
    tcp_nodelay                 on;

    # -- Logging --
    access_log /var/log/nginx/lb-access.log combined buffer=32k flush=5s;
    error_log  /var/log/nginx/lb-error.log warn;

    # -- Main Proxy Pass --
    location / {
        proxy_pass http://tomcat_pool;

        # Proxy Headers
        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto  $scheme;

        # Timeouts
        proxy_connect_timeout       2s;
        proxy_send_timeout          10s;
        proxy_read_timeout          30s;

        # Buffer Settings
        proxy_buffering             on;
        proxy_buffer_size           4k;
        proxy_buffers               8 16k;
        proxy_busy_buffers_size     32k;
        proxy_temp_file_write_size  64k;

        # Error Handling
        proxy_next_upstream         error timeout invalid_header http_500 http_502 http_503 http_504;
        proxy_next_upstream_tries   3;
        proxy_next_upstream_timeout 10s;
    }

    # -- Simple Health Check Endpoint for Nginx (not for backend) --
    location = /health {
        access_log   off;
        return 200 "OK\n";
    }

    # -- Deny access to hidden files like .htaccess --
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

